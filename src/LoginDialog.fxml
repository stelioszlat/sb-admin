<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginDialogController">
   <children>
      <Label layoutX="103.0" layoutY="156.0" text="Username:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="105.0" layoutY="205.0" text="Password:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="87.0" layoutY="39.0" text="Login to SB-Admin">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <TextField layoutX="237.0" layoutY="151.0" promptText="Username">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <PasswordField layoutX="237.0" layoutY="200.0" promptText="Password">
         <font>
            <Font size="18.0" />
         </font>
      </PasswordField>
      <Button fx:id="loginButton" layoutX="300.0" layoutY="303.0" mnemonicParsing="false" onAction="#loginButtonAction" text="Login">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="cancelButton" layoutX="411.0" layoutY="303.0" mnemonicParsing="false" onAction="#cancelButtonAction" text="Cancel">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Label layoutX="105.0" layoutY="253.0" text="Wrong username or password, please try again" textFill="#fc0000">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
